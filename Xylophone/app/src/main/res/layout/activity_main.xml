<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="레"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/re" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="24dp" android:layout_marginBottom="24dp"
            android:gravity="fill_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/do1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/mi"/>
    <TextView
            android:text="미"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/mi" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_orange_light"
            android:layout_marginTop="32dp" android:layout_marginBottom="32dp"
            android:gravity="fill_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/re"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/fa"/>
    <TextView
            android:text="파"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/fa" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_green_light"
            android:layout_marginTop="40dp" android:layout_marginBottom="40dp"
            android:gravity="fill_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/mi"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sol"/>
    <TextView
            android:text="솔"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/sol" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_blue_light"
            android:layout_marginTop="48dp" android:layout_marginBottom="48dp"
            android:gravity="fill_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/fa"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/la"/>
    <TextView
            android:text="라"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/la" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_blue_dark"
            android:layout_marginTop="56dp" android:layout_marginBottom="56dp"
            android:gravity="fill_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/sol"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/si"/>
    <TextView
            android:text="도"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:id="@+id/do1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_red_dark"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
            android:gravity="fill_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/re"/>
    <TextView
            android:text="도"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/do2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_red_dark"
            android:layout_marginTop="72dp" android:layout_marginBottom="72dp"
            android:gravity="fill_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/si"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="시"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/si" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_purple"
            android:layout_marginTop="64dp" android:layout_marginBottom="64dp"
            android:gravity="fill_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/la"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/do2"/>
</android.support.constraint.ConstraintLayout>